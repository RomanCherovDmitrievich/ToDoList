<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.todoapp.controllers.CalendarController" spacing="10" 
      style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
   
   <HBox spacing="10" alignment="CENTER">
      <Button text="◀" onAction="#handlePreviousMonth" style="-fx-font-weight: bold;"/>
      <Label fx:id="monthYearLabel" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
      <Button text="▶" onAction="#handleNextMonth" style="-fx-font-weight: bold;"/>
      <Button text="Сегодня" onAction="#handleToday" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
   </HBox>
   
   <GridPane fx:id="calendarGrid" hgap="5" vgap="5" style="-fx-padding: 10;">
      <columnConstraints>
         <ColumnConstraints prefWidth="100"/>
         <ColumnConstraints prefWidth="100"/>
         <ColumnConstraints prefWidth="100"/>
         <ColumnConstraints prefWidth="100"/>
         <ColumnConstraints prefWidth="100"/>
         <ColumnConstraints prefWidth="100"/>
         <ColumnConstraints prefWidth="100"/>
      </columnConstraints>
   </GridPane>
</VBox>